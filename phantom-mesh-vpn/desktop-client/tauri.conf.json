{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "PhantomMesh VPN",
  "version": "1.0.0",
  "identifier": "com.phantommesh.vpn",
  "build": {
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": {
      "script": "npm run build",
      "cwd": "./ui"
    },
    "frontendDist": "ui/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "PhantomMesh VPN",
        "width": 400,
        "height": 700,
        "minWidth": 360,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "visible": true,
        "focus": true,
        "skipTaskbar": false,
        "dragDropEnabled": false
      }
    ],
    "trayIcon": {
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: asset: https://asset.localhost; script-src 'self'; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "Copyright Â© 2026 PhantomMesh",
    "category": "Utility",
    "shortDescription": "Secure VPN Client with AI-Powered Threat Detection",
    "longDescription": "PhantomMesh VPN is a next-generation VPN client featuring WireGuard protocol, autonomous agent swarm protection, and real-time threat intelligence integration.",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com",
      "wix": null,
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": ["English"],
        "displayLanguageSelector": false
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "exceptionDomain": null,
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": "entitlements.plist",
      "frameworks": []
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libssl3",
          "libayatana-appindicator3-1"
        ]
      }
    }
  }
}
